# Server Configuration
NODE_ENV=production
PORT=3001

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/purchase_requisition_db
# For Railway/Render deployment, DATABASE_URL is provided automatically

# JWT Configuration (IMPORTANT: Change these in production!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_DAYS=7

# CORS Configuration (Update with your production domains)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
